{
    "compilerOptions": {
      "target": "ES2020",                       // Supports modern JS features
      "module": "CommonJS",                     // Required for Node.js
      "moduleResolution": "node",
      "rootDir": "./src",                       // Source files location
      "outDir": "./dist",                       // Output build directory
      "strict": true,                           // Enable all strict type checks
      "esModuleInterop": true,                  // For default import compatibility
      "forceConsistentCasingInFileNames": true, // Avoid file-name inconsistencies
      "skipLibCheck": true,                     // Speeds up compilation
      "resolveJsonModule": true,                // Allows importing .json files
      "noImplicitAny": true                     // Disallow `any` unless explicit
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests"]
  }
  